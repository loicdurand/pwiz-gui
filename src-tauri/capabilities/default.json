{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "$TEMP" }, { "path": "$TEMP/**" }]
    },
    {
      "identifier": "fs:allow-app-write",
      "allow": [{ "path": "$TEMP" }, { "path": "$TEMP/**" }]
    }

  ]
}